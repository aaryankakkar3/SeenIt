# Server Configuration
PORT=5001
NODE_ENV=development

# URLs (for development use localhost, for production use your actual domains)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5001
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Security
JWT_SECRET=your-very-long-random-jwt-secret-key-here

# Database (MongoDB Atlas)
MONGODB_HOST=your-cluster.mongodb.net
MONGODB_USERNAME=your-username
MONGODB_PASSWORD=your-password
MONGODB_DATABASE=your-database-name

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key

# External APIs
TMDB_API_KEY=your-tmdb-api-key
COMICVINE_API_KEY=your-comicvine-api-key
RAWG_API_KEY=your-rawg-api-key
OMDB_API_KEY=your-omdb-api-key
OPENAI_API_KEY=your-openai-api-key

# Gmail SMTP (for email notifications)
GMAIL_EMAIL=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
